{
  "name": "backend-tests",
  "version": "1.0.0",
  "description": "Backend integration tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "!**/node_modules/**"
    ]
  }
}
